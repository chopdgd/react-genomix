{
  "name": "react-genomix",
  "version": "0.9.0",
  "description": "GenomiX React components",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "dist",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "yarn build-css && nwb build-react-component",
    "build-css": "cd src/stylesheets && node-sass-chokidar main.scss -o ./ --output-style compressed && mv main.css ../../dist/react-genomix.min.css",
    "clean": "nwb clean-module && nwb clean-demo",
    "prepublishOnly": "npm run build",
    "start": "nwb serve-react-demo",
    "test": "node tests/index.js",
    "test:coverage": "node tests/index.js --coverage",
    "test:watch": "node tests/index.js --watch"
  },
  "dependencies": {
    "faker": "4.1.0",
    "fixed-data-table-2": "0.8.23",
    "immutability-helper": "2.9.0",
    "moment": "2.22.2",
    "react-csv": "1.1.1",
    "react-virtualized-auto-sizer": "1.0.2",
    "semantic-ui-css": "2.4.1",
    "semantic-ui-react": "0.87.1"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/core": "7.4.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "23.6.0",
    "babel-preset-react-app": "9.0.0",
    "dotenv": "8.0.0",
    "dotenv-expand": "5.1.0",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.13.0",
    "eslint": "5.16.0",
    "eslint-config-react-app": "4.0.1",
    "eslint-plugin-flowtype": "3.9.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.13.0",
    "eslint-plugin-react-hooks": "1.6.0",
    "jest": "24.1.0",
    "jest-pnp-resolver": "1.2.1",
    "jest-resolve": "24.8.0",
    "node-sass-chokidar": "1.3.5",
    "nwb": "0.23.x",
    "prettier": "1.17.1",
    "react": "^16.8.0",
    "react-app-polyfill": "1.0.1",
    "react-dom": "^16.8.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "resolver": "jest-pnp-resolver",
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx}"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/tests/config/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/tests/config/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "author": "Michael A. Gonzalez",
  "homepage": "https://github.com/chopdgd/react-genomix",
  "license": "MIT",
  "repository": "https://github.com/chopdgd/react-genomix",
  "keywords": [
    "react-component",
    "genomics"
  ]
}
