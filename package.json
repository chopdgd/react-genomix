{
  "name": "react-genomix",
  "version": "0.7.5",
  "description": "GenomiX React components",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "dist",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component && yarn build-css",
    "build-css": "cd src/stylesheets && node-sass-chokidar main.scss -o ./ --output-style compressed && mv main.css ../../dist/react-genomix.min.css",
    "clean": "nwb clean-module && nwb clean-demo",
    "prepublishOnly": "npm run build",
    "start": "nwb serve-react-demo",
    "test": "node tests/index.js",
    "test:coverage": "node tests/index.js --coverage",
    "test:watch": "node tests/index.js --watch"
  },
  "dependencies": {
    "faker": "4.1.0",
    "fixed-data-table-2": "1.0.0-beta.10",
    "immutability-helper": "2.9.0",
    "moment": "2.22.2",
    "react-csv": "1.0.19",
    "react-virtualized": "9.21.0",
    "semantic-ui-css": "2.4.1",
    "semantic-ui-react": "0.84.0"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "23.6.0",
    "babel-preset-react-app": "^7.0.0",
    "dotenv": "6.2.0",
    "dotenv-expand": "4.2.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "eslint": "^4.1.1",
    "eslint-config-react-app": "^3.0.3",
    "eslint-plugin-flowtype": "^3.1.4",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "jest": "23.6.0",
    "jest-pnp-resolver": "1.0.2",
    "jest-resolve": "23.6.0",
    "node-sass-chokidar": "1.3.4",
    "nwb": "0.23.x",
    "react": "16.x",
    "react-app-polyfill": "^0.2.0",
    "react-dom": "16.x"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "resolver": "jest-pnp-resolver",
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx}"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/tests/config/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/tests/config/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "author": "Michael A. Gonzalez",
  "homepage": "https://github.com/chopdgd/react-genomix",
  "license": "MIT",
  "repository": "https://github.com/chopdgd/react-genomix",
  "keywords": [
    "react-component",
    "genomics"
  ]
}
